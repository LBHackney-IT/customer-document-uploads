{{> header }}
{{#if isStaff }}
  <a href="{{ pathPrefix }}/dropboxes/">
    << Back to all dropboxes</a>
{{/if }}
<h3>Name:</h3>
<p>{{ dropbox.customerName }}</p>
<h3>Description:</h3>
{{ dropbox.description }}
{{#if dropbox.hasUploads }}
  <h3>Uploaded Documents:</h3>
  <ol>
    {{#each dropbox.uploads }}
      <li>
        <a href="{{../pathPrefix}}/dropboxes/{{../dropboxId}}/files/{{@key}}" target="_blank">{{this.fileName}}</a>
        {{#if this.title }} - {{this.title}}{{/if }}
      </li>
    {{/each}}
  </ol>
{{/if }}
<h3>Submitted on:</h3>
<p>{{dateFormat dropbox.submitted}}</p>
{{> footer showLink=true }}